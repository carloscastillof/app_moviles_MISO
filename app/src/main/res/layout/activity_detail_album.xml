<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.AlbumsDetailActivity"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="408dp"
        android:layout_height="259dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:id="@+id/principal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <Space
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <include android:id="@+id/toolbar" layout="@layout/toolbar_description" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/spacer"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:textSize="28sp"
            tools:text="User Your Illusion I"/>

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="142dp"
            android:layout_height="112dp"
            android:layout_below="@id/title"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="134dp"
            android:layout_marginBottom="15dp"
            app:civ_border_color="@color/white"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:textSize="21sp"
            tools:text="Rock"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gender"
            android:layout_marginStart="15dp"
            android:textColor="@color/white"
            android:id="@+id/date"
            tools:text="1992"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="409dp"
        android:layout_height="469dp"
        android:layout_below="@id/principal"
        android:layout_marginTop="-2dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="261dp">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tracks" />

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comentarios" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/tabContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/tracksContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- Asignar Canción -->
                <RelativeLayout
                    android:id="@+id/tracksContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tabLayout"
                    android:layout_marginTop="150dp">

                    <!-- Tarjeta Superior -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTracks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="#16161B"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp">

                        <!-- LinearLayout con TextViews -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTrackName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="36dp"
                                tools:text="Decepciones"
                                android:textColor="@color/primary_color"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:id="@+id/tvTrackDuration"
                                android:layout_width="64dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="250dp"
                                android:layout_marginTop="-17dp"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="@color/white"
                                android:visibility="visible"
                                tools:text="09:00" />

                        </LinearLayout>
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerViewTracks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Tarjeta Inferior -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardTracks2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="130dp"
                        app:cardBackgroundColor="#16161B"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="2dp">

                        <!-- Información estática para Asignar Canción -->
                        <TextView
                            android:id="@+id/infoTextTracks2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="35dp"
                            android:text="Texto informativo para Asignar Canción"
                            android:textColor="#FFFFFF" />

                    </com.google.android.material.card.MaterialCardView>

                </RelativeLayout>

                <Button
                    android:id="@+id/actionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tabLayout"
                    android:layout_gravity="start"
                    android:layout_marginTop="60dp"
                    android:background="#D0BCFF"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    android:drawablePadding="3dp"
                    android:gravity="center_vertical"
                    android:padding="2dp"
                    android:paddingEnd="20dp"
                    android:text="Asignar Canción"
                    android:textColor="@android:color/white" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/comentariosContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/comentariosContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/actionButtonComentarios"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tabLayout"
                        android:layout_gravity="start"
                        android:layout_marginTop="60dp"
                        android:background="#FF5733"
                        android:drawableLeft="@android:drawable/ic_input_add"
                        android:drawablePadding="3dp"
                        android:gravity="center_vertical"
                        android:padding="2dp"
                        android:paddingEnd="20dp"
                        android:text="Comentarios"
                        android:textColor="@android:color/white"
                        android:visibility="gone" />

                </RelativeLayout>

            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

</RelativeLayout>